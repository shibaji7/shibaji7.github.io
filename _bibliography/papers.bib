       author = {{Prikryl}, Paul and {Gillies}, Robert G. and {Themens}, David R. and {Weygand}, James M. and {Thomas}, Evan G. and {Chakraborty}, Shibaji},
        title = "{Multi-instrument observations of polar cap patches and traveling ionospheric disturbances generated by solar wind Alfv{\'e}n waves coupling to the dayside magnetosphere}",
