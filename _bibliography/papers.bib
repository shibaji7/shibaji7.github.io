@article{Coyle2023GL106432,
  author = {Coyle, S. E. and Baker, J. B. H. and Chakraborty, S. and Hartinger, M. D. and Freeman, M. P. and Clauer, C. R. and Xu, Z. and Weimer, D. R.},
